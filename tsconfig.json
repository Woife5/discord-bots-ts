{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2020"],
    "module": "ES2022",
    "rootDir": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
