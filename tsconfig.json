{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2021"],
        "module": "ES2022",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "alwaysStrict": true
    }
}
