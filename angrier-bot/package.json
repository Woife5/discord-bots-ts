{
    "name": "angrier-bot",
    "version": "2.0.0",
    "description": "Angrier Bot.",
    "type": "module",
    "main": "./build/index.js",
    "scripts": {
        "build": "esbuild ./src/angrier-bot.ts --minify --bundle --outdir=./build --platform=node --target=node16 --format=esm --external:../node_modules/*",
        "build:dev": "esbuild ./src/angrier-bot.ts --bundle --outdir=./build --platform=node --target=node16 --format=esm --external:../node_modules/*",
        "angry2": "yarn build:dev && node ../build/angrier-bot.js",
        "lint": "eslint src/**/*.ts"
    },
    "author": "Wolfgang Schwendtbauer",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.30.7",
        "@typescript-eslint/parser": "^5.30.7",
        "esbuild": "^0.14.41",
        "eslint": "^8.20.0",
        "typescript": "^4.7.4"
    },
    "dependencies": {
        "@discordjs/rest": "^0.5.0",
        "discord-api-types": "^0.33.5",
        "discord.js": "^13.7.0",
        "dotenv": "^16.0.1",
        "mongoose": "^6.3.4",
        "node-fetch": "^3.2.4"
    }
}
