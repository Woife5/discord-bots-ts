{
    "name": "@woife5/copilot-bot",
    "version": "0.1.0",
    "description": "Copilot Bot",
    "type": "module",
    "main": "./index.js",
    "license": "GPL-3.0",
    "author": "Wolfgang Schwendtbauer",
    "scripts": {
        "start": "bun --watch src/copilot-bot.ts",
        "build": "bun build ./src/copilot-bot.ts --outdir . --minify-whitespace --minify-syntax --target bun",
        "lint": "biome lint",
        "format": "biome format",
        "check": "biome check",
        "typecheck": "tsc --noEmit",
        "predockerize": "bun run lint && bun run typecheck && bun run build",
        "dockerize": "docker buildx build -t woife5/copilot-bot:latest -f ./Dockerfile --platform=linux/arm64,linux/amd64 -o type=registry ."
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.10",
        "bun-types": "^1.3.5",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "@woife5/shared": "workspace:*",
        "discord.js": "^14.25.1"
    }
}
