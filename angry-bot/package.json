{
    "name": "angry-bot",
    "version": "2.2.0",
    "description": "Angry Bot.",
    "type": "module",
    "main": "./build/index.js",
    "scripts": {
        "start": "yarn build:dev && node ../build/angry-bot.js",
        "build": "esbuild ./src/angry-bot.ts --minify --bundle --outdir=../build --platform=node --target=node16 --format=esm --external:../node_modules/*",
        "build:migration": "esbuild ./src/migrations/migration-to-db.ts --minify --bundle --outdir=../build --platform=node --target=node16 --format=esm --external:../node_modules/*",
        "build:commands": "esbuild ./src/migrations/register-commands.ts --minify --bundle --outdir=../build --platform=node --target=node16 --format=esm --external:../node_modules/*",
        "build:dev": "esbuild ./src/angry-bot.ts --bundle --outdir=../build --platform=node --target=node16 --format=esm --external:../node_modules/*",
        "migrate": "yarn build:migration && node ../build/migration-to-db.js",
        "lint": "eslint ./src/**/*.ts"
    },
    "author": "Wolfgang Schwendtbauer",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.37.0",
        "@typescript-eslint/parser": "^5.37.0",
        "esbuild": "^0.15.7",
        "eslint": "^8.23.1",
        "typescript": "^4.8.3"
    },
    "dependencies": {
        "@discordjs/rest": "^0.5.0",
        "discord-api-types": "^0.33.5",
        "discord.js": "^13.7.0",
        "dotenv": "^16.0.1",
        "mongoose": "^6.3.4",
        "node-fetch": "^3.2.4"
    }
}
