{
    "name": "angry-bot",
    "version": "2.8.10",
    "description": "Angry Bot.",
    "type": "module",
    "main": "./index.js",
    "scripts": {
        "start": "yarn build:dev && node ./index-dev.js",
        "build": "esbuild ./src/angry-bot.ts --minify --bundle --outfile=./index.js --platform=node --target=node18 --format=esm --external:../node_modules/*",
        "build:dev": "esbuild ./src/angry-bot.ts --bundle --outfile=./index-dev.js --platform=node --target=node18 --format=esm --external:../node_modules/*",
        "lint": "eslint ./src/**/*.ts",
        "postlint": "tsc --noEmit",
        "predockerize": "yarn lint && yarn build",
        "dockerize": " cd .. && docker buildx build -t woife5/angry-bot:latest -f ./angry-bot/Dockerfile --platform=linux/arm64,linux/amd64,linux/arm/v7,linux/arm/v6 -o type=registry . "
    },
    "author": "Wolfgang Schwendtbauer",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.37.0",
        "@typescript-eslint/parser": "^5.37.0",
        "esbuild": "^0.15.7",
        "eslint": "^8.23.1",
        "typescript": "^4.8.3"
    },
    "dependencies": {
        "@discordjs/rest": "^1.1.0",
        "discord-api-types": "^0.37.10",
        "discord.js": "^14.3.0",
        "dotenv": "^16.0.2",
        "mongoose": "^6.3.4",
        "node-fetch": "^3.2.4"
    }
}
