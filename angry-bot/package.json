{
    "name": "@woife5/angry-bot",
    "version": "3.4.0",
    "description": "Angry Bot.",
    "type": "module",
    "main": "./index.js",
    "license": "GPL-3.0",
    "author": "Wolfgang Schwendtbauer",
    "scripts": {
        "start": "pnpm build:dev && node ./index-dev.js",
        "build": "node build.js --prod",
        "build:dev": "node build.js --dev",
        "lint": "eslint ./src/**/*.ts",
        "format": "prettier --check ./src/**/*.ts",
        "format:fix": "prettier --write ./src/**/*.ts",
        "typecheck": "tsc --noEmit",
        "predockerize": "pnpm lint && pnpm typecheck && pnpm build",
        "dockerize": "docker buildx build -t woife5/angry-bot:latest -f ./Dockerfile --platform=linux/arm64,linux/amd64,linux/arm/v7,linux/arm/v6 -o type=registry ."
    },
    "devDependencies": {
        "@types/node-cron": "^3.0.9",
        "@typescript-eslint/eslint-plugin": "^6.7.4",
        "@typescript-eslint/parser": "^6.7.4",
        "esbuild": "^0.19.4",
        "eslint": "^8.51.0",
        "typescript": "^5.2.2",
        "prettier": "^3.0.3"
    },
    "dependencies": {
        "@discordjs/rest": "^2.0.1",
        "@woife5/shared": "workspace:*",
        "discord-api-types": "^0.37.60",
        "discord.js": "^14.13.0",
        "dotenv": "^16.3.1",
        "mongoose": "^7.6.0",
        "node-cron": "^3.0.2",
        "node-fetch": "^3.3.2"
    }
}
